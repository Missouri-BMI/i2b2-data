<project name="Fulldata" basedir=".">

	<property environment="env" />

	<property file="./db.properties" />

	<!-- =================================================================== -->
	<!-- 								INIT 								 -->
	<!-- =================================================================== -->
	<target name="init"  description="Prepare for build">
		<path id="classpath">
			<pathelement location="../ojdbc8.jar" />
			<pathelement location="../mssql-jdbc-6.2.2.jre8.jar"/>
			<pathelement location="../postgresql-42.1.4.jar"/>
		</path>
	</target>

	<target name="create_database_with_demodata" depends="init" description="Load i2b2">
                        <echo message="${Name}: CRC Data" />
			    <property file="./Crcdata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="create_crcdata_tables_release_1-7"/>
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="create_procedures_release_1-7"/>
         
                        <echo message="${Name}: Ontology Data" />
                            <property file="./Metadata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="create_metadata_tables_release_1-7"/>

                        <echo message="${Name}: Work Data" />
                            <property file="./Workdata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="create_workdata_tables_release_1-7"/>

                        <echo message="${Name}: Hive Data" />
                            <property file="./Hivedata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="create_hivedata_tables_release_1-7"/>

                        <echo message="${Name}: Pm Data" />
                            <property file="./Workdata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="create_pmdata_tables_release_1-7"/>
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="create_triggers_release_1-7"/>
	</target>

        <target name="load_demodata" depends="init" description="Load Demo Data">
                        <echo message="${Name}: CRC Data" />
                            <property file="./Crcdata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="db_demodata_load_data"/>

                        <echo message="${Name}: Ontology Data" />
                            <property file="./Metadata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="db_metadata_load_data"/>

                        <echo message="${Name}: Work Data" />
                            <property file="./Workdata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="db_workdata_load_data"/>

                        <echo message="${Name}: Hive Data" />
                            <property file="./Hivedata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="db_hivedata_load_data"/>

                        <echo message="${Name}: Pm Data" />
                            <property file="./Workdata/db.properties" />
                            <ant antfile="data_build.xml"  dir="./Crcdata" target="db_pmdata_load_data"/>
        </target>




</project>


