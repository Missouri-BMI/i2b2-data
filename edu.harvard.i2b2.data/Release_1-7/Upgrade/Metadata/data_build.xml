<project name="Metadata" basedir=".">

	<property environment="env" />

	<property file="./db.properties" />

	<!-- =================================================================== -->
	<!-- 								INIT 								 -->
	<!-- =================================================================== -->
	<target name="init"  description="Prepare for build">
		<path id="classpath">
			<pathelement location="../../ojdbc8.jar" />
			<pathelement location="../../mssql-jdbc-6.2.2.jre8.jar"/>
			<pathelement location="../../postgresql-42.1.4.jar"/>
		</path>
	</target>

	

	<!-- =================================================================== -->
	<!-- 			DATABASE SETUP TARGETS						 			 -->
	<!-- =================================================================== -->

	<target name="upgrade_metadata_tables_release_1-7" depends="init">
		<sql driver="${db.driver}" url="${db.url}" userid="${db.username}" password="${db.password}" classpathref="classpath" onerror="continue" print="true">
			<transaction src="./scripts/${db.type}/create_icd10_icd9_table.sql" />
			<transaction src="./scripts/schemes_insert_data.sql" />
			<transaction src="./scripts/table_access_insert_data.sql" />
			<transaction src="./scripts/ont_${db.type}.sql" />	
			<transaction src="./scripts/${db.type}/create_totalnum_tables.sql" />		
		</sql>
	</target>

	<target name="upgrade_sqlserver_metadata_tables_release_1-7_08" depends="init">
		<sql driver="${db.driver}" url="${db.url}" userid="${db.username}" password="${db.password}" classpathref="classpath" onerror="continue" print="true">
			<transaction src="./scripts/${db.type}/AgeAtVisitUpdate.sql" />
		</sql>
	</target>
	
</project>


